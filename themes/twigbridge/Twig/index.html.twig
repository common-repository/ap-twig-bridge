{% include 'header.html.twig' %}

        <div id="content" class="narrowcolumn" role="main">

        {% if (have_posts()) %}

		{% for post in loop %}
                        <div {{ post_class() }} id="post-{{ the_ID() }}">
                                <h2><a href="{{ the_permalink() }}" rel="bookmark" title="{{ the_title_attribute() }}">{{ the_title() }}</a></h2>
                                <small>{{ the_time('F jS, Y') }} <!-- by {{ the_author() }} --></small>
                                <div class="entry">
                                        {{ the_content(__('Read the rest of this entry &raquo;', 'kubrick')) }}
                                </div>

				<p class="postmetadata">
				    {{ the_tags('Tags: ', ', ', '<br />') }}
				    {{ __('Posted in') }} {{ get_the_category_list(', ') }} | {{ edit_post_link('Edit', '', ' | ') }} 
				    {{ comments_popup_link('No Comments &#187;', '1 Comment &#187;', '% Comments &#187;', '', 'Comments Closed' ) }}
				</p>
                        </div>
		{% endfor %}

                <div class="navigation">
                        <div class="alignleft">{{ next_posts_link(__('&laquo; Older Entries', 'kubrick')) }}</div>
                        <div class="alignright">{{ previous_posts_link(__('Newer Entries &raquo;', 'kubrick')) }}</div>
                </div>

	{% else %}
                <h2 class="center">{{ __('Not Found', 'kubrick') }}</h2>
                <p class="center">{{ __('Sorry, but you are looking for something that isn&#8217;t here.', 'kubrick') }}</p>
		{% include 'searchform.html.twig' %}
	{% endif %}

        </div>

